<%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
    <div class="container mt-5 col-6">
        <form action="/response/1" method="post">
            <div class="col mb-3">
                <label for="batsman" class="form-label">Batsman</label>
                <div class="row">
                    <input type="text" class="col mx-4 form-control" id="batsman">
                    <button type="button" class="col-2 mx-4 btn btn-secondary" onclick="searchPlayerFunc(document.getElementById('batsman').value, 'batsman-res')">Search</button>
                </div>
                <div id="batsman-res" class="card row m-3 p-3"></div>
            </div>
            <div class="col mb-3">
                <label for="bowler" class="form-label">Bowler</label>
                <div class="row">
                    <input type="text" class="col mx-4 form-control" id="bowler">
                    <button type="button" class="col-2 mx-4 btn btn-secondary" onclick="searchPlayerFunc(document.getElementById('bowler').value, 'bowler-res')">Search</button>
                </div>
                <div id="bowler-res" class="card row m-3 p-3"></div>
            </div>
            <br>
            <div class="col mb-3 text-center">
                <button type="submit" class="btn btn-secondary">Submit</button>
            </div>
        </form>
    </div>
    <!-- <%- include('partials/footer') %> -->
</body>
