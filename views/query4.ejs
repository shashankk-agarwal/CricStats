<%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
    <div class="container mt-5 col-6">
        <form action="/response/4" method="post">
            <div class="col mb-3">
                <label for="player1" class="form-label">Player1</label>
                <div class="row">
                    <input type="text" class="col mx-4 form-control" id="player1">
                    <button type="button" class="col-2 mx-4 btn btn-secondary" onclick="searchPlayerFunc(document.getElementById('player1').value, 'player1-res')">Search</button>
                </div>
                <div id="player1-res" class="card bg-light row m-3 p-2"></div>
            </div>
            <div class="col mb-3">
                <label for="player2" class="form-label">Player2</label>
                <div class="row">
                    <input type="text" class="col mx-4 form-control" id="player2">
                    <button type="button" class="col-2 mx-4 btn btn-secondary" onclick="searchPlayerFunc(document.getElementById('player2').value, 'player2-res')">Search</button>
                </div>
                <div id="player2-res" class="card bg-light row m-3 p-2"></div>
            </div>
            <br>
            <div class="col mb-3 text-center">
                <button type="submit" class="btn btn-secondary">Submit</button>
            </div>
        </form>
    </div>
    <!-- <%- include('partials/footer') %> -->
</body>
